@model DiaryApp.Models.Contact

@{
    ViewData["Title"] = "Удаление контакта";
}

<h1>@ViewData["Title"]</h1>

<h3>Вы действительно хотите удалить эту запись?</h3>
<div>
    <h4>Контакт</h4>
    <hr />
    <dl class="row">
        <dt class="col-12 col-md-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-12 col-md-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-12 col-md-2">
            @Html.DisplayNameFor(model => model.SecondName)
        </dt>
        <dd class="col-12 col-md-10">
            @Html.DisplayFor(model => model.SecondName)
        </dd>
        <dt class="col-12 col-md-2">
            @Html.DisplayNameFor(model => model.ThirdName)
        </dt>
        <dd class="col-12 col-md-10">
            @Html.DisplayFor(model => model.ThirdName)
        </dd>
        <dt class="col-12 col-md-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-12 col-md-10">
            @Html.DisplayFor(model => model.BirthDateView)
        </dd>
        <dt class="col-12 col-md-2">
            @Html.DisplayNameFor(model => model.Company)
        </dt>
        <dd class="col-12 col-md-10">
            @Html.DisplayFor(model => model.Company)
        </dd>
        <dt class="col-12 col-md-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-12 col-md-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class="col-12 col-md-2">
            @Html.DisplayNameFor(model => model.ContactInfoSummary)
        </dt>
        <dd class="col-12 col-md-10">
            @Html.DisplayFor(model => model.ContactInfoSummary)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Отменить</a>
    </form>
</div>
